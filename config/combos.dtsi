/* misc */
COMBO(alfred, &kp LG(SPACE), 23 26, COL)
COMBO(clpbrd, &kp LG(LC(LA(LS(Z)))), 14 15, COL)
COMBO(clpbrd1hand, &kp LG(LC(LA(LS(Z)))), 13 14, COL)

COMBO(pwrtys, &kp LG(SPACE), 23 26, COLW ARAQ)
COMBO(ditto, &kp LG(LC(LA(LS(Z)))), 14 15, COLW ARAQ)
COMBO(ditto1hand, &kp LG(LC(LA(LS(Z)))), 13 14, COLW ARAQ)

COMBO(esc, &kp ESC, 23 30, COL COLW ARAQ) 
COMBO(enter, &kp ENTER, 13 23, COL COLW ARAQ)
COMBO(backspace, &kp BACKSPACE, 4 14, COL COLW ARAQ)

COMBO(key_repeat, &key_repeat, 16 26, COL COLW ARAQ)

COMBO(delete_word, &kp LA(BACKSPACE), 5 15, COL)
COMBO(delete_word_win, &kp LC(BACKSPACE), 5 15, COLW ARAQ)

/* one hand */
COMBO(nav1h, &mo_nav, 30 31, COL)
COMBO(sym1h, &mo_sym, 32 33, COL)

COMBO(nav1hw, &mo_navW, 30 31, COLW ARAQ)
COMBO(sym1hw, &mo_symW, 32 33, COLW ARAQ)

#define GCOMBO(NAME, BINDINGS, KEYPOS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
  };

/* mac | win */
GCOMBO(switch_to_mac, &to COL, 12 13 30)
GCOMBO(switch_to_win, &to COLW, 16 17 33)
GCOMBO(switch_to_ara, &to ARAQ, 17 18 33)

GCOMBO(misc_layertL, &to MISC, 11 12 13 14)
GCOMBO(misc_layerR, &to MISC, 15 16 17 18)
