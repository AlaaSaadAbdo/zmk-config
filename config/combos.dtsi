compatible = "zmk,combos";

#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
  };

/* misc */
COMBO(esc, &kp ESC, 20 21, COL COLW)

/* mac | win */
COMBO(switch_to_mac, &to COL, 0 20, COLW)
COMBO(switch_to_win, &to COLW, 9 29, COL)

/* Keyboard */
COMBO(reset, &reset, 11 12 13 17, COL)
COMBO(bootloader, &bootloader, 14 15 24 25, COL)
COMBO(bt0, &bt BT_SEL 0, 1 2, COL)
COMBO(bt1, &bt BT_SEL 1, 2 3, COL)
COMBO(bt2, &bt BT_SEL 2, 3 4, COL)
COMBO(bttog, &out OUT_TOG, 11 12 13, NAV)
COMBO(btclear, &bt BT_CLR, 4 24, COL)
