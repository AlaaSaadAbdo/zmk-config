/* misc */
COMBO(alfred, &kp LG(SPACE), 23 26, COL HDN)
COMBO(clpbrd, &kp LG(LC(LA(LS(Z)))), 14 15, COL HDN)

COMBO(pwrtys, &kp LG(SPACE), 23 26, COLW ARAQ HDNW)
COMBO(ditto, &kp LG(LC(LA(LS(Z)))), 14 15, COLW ARAQ HDNW)

COMBO(esc, &kp ESC, 23 30, COL COLW ARAQ HDN HDNW)
COMBO(enter, &kp ENTER, 13 23, COL COLW ARAQ HDN HDNW)
COMBO(backspace, &kp BACKSPACE, 4 14, COL COLW ARAQ HDN HDNW)
COMBO(key_repeat, &key_repeat, 16 26, COL COLW ARAQ HDN HDNW)

COMBO(delete_word, &kp LA(BACKSPACE), 5 15, COL HDN)

COMBO(delete_word_win, &kp LC(BACKSPACE), 5 15, COLW ARAQ HDNW)

/* one hand */
COMBO(nav1h, &mo_nav, 30 31, COL HDN)
COMBO(sym1h, &mo_sym, 32 33, COL HDN)

COMBO(nav1hw, &mo_navW, 30 31, COLW ARAQ HDNW)
COMBO(sym1hw, &mo_symW, 32 33, COLW ARAQ HDNW)

#define GCOMBO(NAME, BINDINGS, KEYPOS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
  };

/* mac | win */
GCOMBO(switch_to_mac, &to COL, 12 13 30)
GCOMBO(switch_to_mac30, &to COL30, 11 12 13 30)
GCOMBO(switch_to_hdn, &to HDN, 11 12 30)
GCOMBO(switch_to_win, &to COLW, 16 17 33)
GCOMBO(switch_to_win30, &to COLW30, 16 17 18 33)
GCOMBO(switch_to_ara, &to ARAQ, 17 18 33)
GCOMBO(switch_to_hdnw, &to HDNW, 18 19 33)

GCOMBO(misc_layertL, &to MISC, 11 12 13 14)
GCOMBO(misc_layerR, &to MISC, 15 16 17 18)
