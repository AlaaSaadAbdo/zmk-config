compatible = "zmk,combos";

#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    timeout-ms = <20>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
  };

/* Missing Alphas */
COMBO(Z, &kp Z, 20 21, COL COLW ARAQ) // Z and ئ
COMBO(V, &kp V, 21 22, COL COLW) // V
COMBO(J, &kp J, 7 8, COL COLW) // J
COMBO(J2, &kp J, 2 3, COL COLW) // J on alternate hand
COMBO(slash, &kp SLASH, 24 25, COL COLW ARAQ) // slash and ظ
COMBO(taaa, &kp SQT, 18 19, ARAQ) // ط
COMBO(geem, &kp LBKT, 7 8, ARAQ) // ج
COMBO(daal, &kp RBKT, 8 9, ARAQ) // د
COMBO(zthal, &kp GRAVE, 0 1, ARAQ) // ذ
COMBO(zthal, &kp N, 23 24, ARAQ) // ى

/* Missing Fn */
COMBO(fn9, &kp F9, 20 21, NUM NUMW)
COMBO(fn10, &kp F10, 21 22, NUM NUMW)
COMBO(fn11, &kp F11, 23 24, NUM NUMW)
COMBO(fn12, &kp F12, 24 25, NUM NUMW)

/* HDN experiment */
COMBO(hdn_z, &kp Z, 20 21, HDN HNDW) // Z
COMBO(hdn_v, &kp V, 21 22, HDN HNDW) // V
COMBO(hdn_q, &kp Q, 1 2, HDN HNDW) // Q
COMBO(hdn_slash, &kp SLASH, 24 25, HDN HNDW) // Slash

/* Brackets */
COMBO(left_brace, &kp LBRC, 1 11, COL COLW ARAQ HDN HNDW)
COMBO(right_brace, &kp RBRC, 8 18, COL COLW ARAQ HDN HNDW)
COMBO(left_bracket, &kp LBKT, 2 12, COL COLW ARAQ HDN HNDW)
COMBO(right_bracket, &kp RBKT, 7 17, COL COLW ARAQ HDN HNDW)
COMBO(left_parenthesis, &kp LPAR, 3 13, COL COLW ARAQ HDN HNDW)
COMBO(right_parenthesis, &kp RPAR, 6 16, COL COLW ARAQ HDN HNDW)

/* Text processing */
COMBO(undo, &kp LG(Z), 10 20, COL HDN)
COMBO(redo, &kp LG(LS(Z)), 10 21, COL HDN)

COMBO(select_all, &kp LG(A), 10 22, COL HDN)

COMBO(cut, &kp LG(X), 11 20 , COL HDN)
COMBO(copy, &kp LG(C), 12 21, COL HDN)
COMBO(paste, &kp LG(V), 20 21 22, COL HDN)

COMBO(undow, &kp LC(Z), 10 20, COLW ARAQ HDNW)
COMBO(redow, &kp LC(Y), 10 21, COLW ARAQ HDNW)

COMBO(select_allw, &kp LC(A), 10 22, COLW ARAQ HDNW)

COMBO(copyw, &kp LC(C), 11 20, COLW ARAQ HDNW)
COMBO(cutw, &kp LC(X), 12 21, COLW ARAQ HDNW)
COMBO(pastew, &kp LC(V), 20 21 22, COLW ARAQ HDNW)

COMBO(caps_word, &caps_word, 27 28, COL COLW ARAQ HDN HDNW)

/* one hand */
COMBO(nav1h, &mo_nav, 26 27, COL HDN)
COMBO(sym1h, &mo_sym, 28 29, COL HDN)

COMBO(nav1hw, &mo_navW, 26 27, COLW ARAQ HDNW)
COMBO(sym1hw, &mo_symW, 28 29, COLW ARAQ HDNW)

