/* misc */
COMBO(alfred, &kp LG(SPACE), 26 29, COL CUS)
COMBO(clpbrd, &kp LG(LC(LA(LS(Z)))), 14 15, COL CUS)

COMBO(pwrtys, &kp LG(SPACE), 26 29, COLW ARAQ CUSW)
COMBO(ditto, &kp LG(LC(LA(LS(Z)))), 14 15, COLW ARAQ CUSW)

COMBO(esc, &kp ESC, 22 26, COL COLW ARAQ CUS CUSW)
COMBO(enter, &kp ENTER, 13 22, COL COLW ARAQ CUS CUSW)
COMBO(backspace, &kp BACKSPACE, 4 14, COL COLW ARAQ CUS CUSW)
COMBO(key_repeat, &key_repeat, 16 23, COL COLW ARAQ CUS CUSW)

COMBO(delete_word, &kp LA(BACKSPACE), 5 15, COL CUS)
COMBO(delete_word_win, &kp LC(BACKSPACE), 5 15, COLW ARAQ CUSW)

COMBO(lock_screen, &kp LG(LC(Q)), 6 7 8, NAV)
COMBO(lock_screenw, &kp LG(L), 6 7 8, NAVW)

#define GCOMBO(NAME, BINDINGS, KEYPOS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
  };
  
/* mac | win */
GCOMBO(switch_to_mac, &to COL, 12 13 26)
GCOMBO(switch_to_win, &to COLW, 16 17 29)
GCOMBO(switch_to_ara, &to ARAQ, 17 18 29)

GCOMBO(switch_to_cus_mac, &to CUS, 10 11 26)
GCOMBO(switch_to_cus_win, &to CUSW, 18 19 29)

/* bluetooth */
COMBO(bt_clear, &bt BT_CLR, 11 12 13, NAV NAVW)
COMBO(bt_0, &bt BT_SEL 0, 20 21, NAV NAVW)
COMBO(bt_1, &bt BT_SEL 1, 21 22, NAV NAVW)
COMBO(bt_2, &bt BT_SEL 2, 1 2, NAV NAVW)
COMBO(bt_3, &bt BT_SEL 3, 2 3, NAV NAVW)